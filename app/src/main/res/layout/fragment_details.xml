<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.details.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_detailed"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvTitleDetailed"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/grey"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="@style/Text.Bold"
            app:layout_constraintTop_toBottomOf="@+id/img_detailed"
            android:text=""
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="@style/Text.Normal"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/tvTitleDetailed"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>



        </ScrollView>